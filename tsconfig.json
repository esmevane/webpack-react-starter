{
  "atom": {
    "rewriteTsconfig": false
  },
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "lib",
    "allowJs": true,
    "jsx": "preserve",
    "module": "es6",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6"
  },
  "disableCompileOnSave": true,
  "exclude": [
    "./node_modules"
  ],
  "filesGlob": [
    "!**/*.spec.ts",
    "!**/*.spec.tsx",
    "**/*.ts",
    "**/*.tsx",
    "lib/index.ts",
    "typings/*.d.ts"
  ]
}
