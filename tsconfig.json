{
  "atom": {
    "rewriteTsconfig": false
  },
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "baseUrl": "lib",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "jsx": "preserve",
    "target": "es6",
    "pretty": true
  },
  "disableCompileOnSave": true,
  "filesGlob" : [
    "typings/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "!node_modules/**",
    "!**/*.spec.ts",
    "!**/*.spec.tsx"
  ]
}
